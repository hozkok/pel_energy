doctype html
html(lang='en')
  head
    meta(http-equiv='content-type', content='text/html; charset=UTF-8')
    meta(charset='utf-8')
    title Energy Website
    link(rel='stylesheet', type='text/css', href='css/main.css')
    // add scripts
    script(src='js/jquery-latest.js', type='text/javascript')
    script(src='js/highcharts.js', type='text/javascript')
    script(src='js/exporting.js', type='text/javascript')
    script(src='js/masterCSV.js', type='text/javascript')
    script(src='js/Demand.js', type='text/javascript')
    script(src='js/Price.js', type='text/javascript')
    script(src='js/cost.js', type='text/javascript')
    // script src="js/upload.js" type="text/javascript"></script
    script(src='js/theme.js', type='text/javascript')
    script(type='text/javascript').
      pricedata = [#{price}];
      d = [#{demand}];
      pricetotal = #{p_total};
      total = #{d_total};
  body
    h1 DSM for the Home
    // Div tag contain the buttons to toggle the graphs
    #costbuttons(style='margin: 0px auto 0px auto; text-align: center;')
      button#drawgraphs.button(type='button', name='drawgraphs', value='') Show Energy Profile
    // Div tag where the graphs are rendered to
    #price.graph(style='min-width: 400px; height: 400px; margin: 0 auto')
    #demanddiv.graph(style='min-width:  400px; height: 400px; margin: 0 auto')
    #demandinfodiv.graph
      #info
        #totaldemand.infotext
        #drag.infotext
        #drop.infotext
        #newtotaldemand.infotext
        #totaldiff.infotext
      #differencediv(style='width:800px; height: 200px; margin-bottom:10px')
    #cost.graph(style='min-width: 400px; height: 400px; margin: 0 auto')
    #displaycost
      #totalcost
      #newcost
      #savings
    script(type='text/javascript').
      console.log(localStorage.username);
